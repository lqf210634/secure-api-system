# 生产环境配置示例
# 复制此文件为 .env.production 并填入实际值

# 应用版本
VERSION=latest

# Docker 镜像仓库
DOCKER_REGISTRY=your-registry.com

# 数据库配置
MYSQL_ROOT_PASSWORD=your-super-secure-root-password
MYSQL_DATABASE=secure_api_prod
MYSQL_USER=secure_api_user
MYSQL_PASSWORD=your-secure-database-password

# Redis 配置
REDIS_PASSWORD=your-secure-redis-password

# JWT 配置
JWT_SECRET=your-super-long-jwt-secret-key-at-least-256-bits
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800

# 加密密钥
ENCRYPTION_KEY=your-32-character-encryption-key

# API 配置
API_RATE_LIMIT=1000
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 前端配置
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_APP_TITLE=Secure API System
VITE_ENABLE_ANALYTICS=true

# 监控配置
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_DOMAIN=monitoring.yourdomain.com

# SSL 证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 邮件配置
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your-mail-password
MAIL_FROM=noreply@yourdomain.com

# 短信配置
SMS_PROVIDER=twilio
SMS_API_KEY=your-sms-api-key
SMS_API_SECRET=your-sms-api-secret
SMS_FROM_NUMBER=+1234567890

# 文件存储配置
FILE_STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=your-s3-bucket

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/application.log
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_HISTORY=30

# 监控和告警
PROMETHEUS_RETENTION_TIME=30d
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# 安全配置
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 数据库连接池配置
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_MAX_WAIT=30000

# 性能配置
THREAD_POOL_SIZE=50
MAX_REQUEST_SIZE=10MB
MAX_FILE_SIZE=5MB

# 第三方服务
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# 健康检查配置
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3