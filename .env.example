# ===========================================
# Secure API System Environment Variables
# ===========================================

# 应用基本配置
APP_TITLE=Secure API System
APP_VERSION=1.0.0
NODE_ENV=development
SPRING_PROFILES_ACTIVE=development

# 端口配置
FRONTEND_PORT=3000
BACKEND_PORT=8080
NGINX_PORT=443
NGINX_HTTP_PORT=8080

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=secure_api
DB_USERNAME=apiuser
DB_PASSWORD=your-secure-db-password
DB_ROOT_PASSWORD=your-secure-root-password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password

# 安全配置
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here-at-least-256-bits
ENCRYPTION_KEY=your-32-character-encryption-key

# API配置
API_BASE_URL=/api

# 日志配置
LOG_LEVEL=INFO

# 调试配置
ENABLE_DEBUG=false
DEBUG_PORT=5005
ENABLE_JMX=false
JMX_PORT=9999

# 前端配置
ENABLE_ANALYTICS=false
DEBUG_MODE=false

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password

# 日志收集配置
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
ELASTICSEARCH_HOST=elasticsearch.yourdomain.com
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-secure-elasticsearch-password

# Docker镜像标签
IMAGE_TAG=latest

# 生产环境配置
BACKEND_HOST=backend:8080

# 备份配置
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# SSL证书配置（生产环境）
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=noreply@yourdomain.com

# 第三方服务配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# 文件上传配置
MAX_FILE_SIZE=10MB
UPLOAD_PATH=/app/uploads

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 限流配置
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# 会话配置
SESSION_TIMEOUT=1800
REMEMBER_ME_TIMEOUT=604800

# 验证码配置
CAPTCHA_LENGTH=4
CAPTCHA_EXPIRY=300

# 密码策略配置
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# 账户锁定配置
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=1800

# 审计日志配置
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_MAX_SIZE=100MB

# 性能配置
DB_CONNECTION_POOL_SIZE=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# 监控告警配置
ALERT_EMAIL=admin@yourdomain.com
ALERT_WEBHOOK=https://hooks.slack.com/your-webhook-url

# 开发环境特定配置
DEV_AUTO_RELOAD=true
DEV_MOCK_DATA=true
DEV_CORS_ENABLED=true

# 测试环境特定配置
TEST_DATABASE_URL=jdbc:h2:mem:testdb
TEST_REDIS_ENABLED=false

# 生产环境特定配置
PROD_SSL_ENABLED=true
PROD_COMPRESSION_ENABLED=true
PROD_CACHE_ENABLED=true